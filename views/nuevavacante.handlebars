<main class="contenedor">
    <form action="/vacantes/nueva" method = "POST" class="default-form">
        <h3>Informaci√≥n General</h3>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name = "titulo" placeholder="Ejemplo : Ing. Civil" required>
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name = "empresa" placeholder="Ejemplo : BHP Billiton" required>
        </div>  
        <div class="campo">
            <label>Ubicacion</label>
            <input type="text" name = "ubicacion" placeholder="Ejemplo : Curico, Chile" required>
        </div>  
        <div class="campo">
            <label>Salario (CLP)</label>
            <input type="text" name = "salario" placeholder="Ejemplo : $500.000" required>
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                <option value="" disabled selected>--Selecciona--</option>
                <option value="Freelancer">FreeLancer</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
            </select>
        </div>      
        <h3>Descripcion del Puesto</h3>
        <div class="campo descripcion">
            <label >Descripcion del Puesto</label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input = "x"></trix-editor>
        </div>
        <h3>Conocimientos Informaticos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="publicar" class="btn btn-azul">
        </div>
    </form>
</main>